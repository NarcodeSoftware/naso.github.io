	$('#topPu').html($('#toplamPuan').html())
	$('#topJe').html($('#tasPuan').html())
}


function puanaCevirGizle(){
	$('#puanaCevirmeFormu').hide()
}

function puanAl(){
var puanDegeri = 500
var jeton = $('#tasPuan').html()
var puan = Number($('#toplamPuan').html())
var kullaniciKodu = localStorage.getItem('userCode')

	if(jeton>=puanDegeri){
		var query=firebase.database().ref('kullanicilar/'+kullaniciKodu)
		query.update({
			tasPuan: jeton-puanDegeri
		});
		query.update({
			toplamPuan: puan+1
		});
		
		  $('#topPu').html(Number($('#topPu').html())+1)
		
			var count = setInterval(function(){
				$('#topJe').html(Number($('#topJe').html())-1)
			},4)
			
			setTimeout(function(){
				clearInterval(count)
			},2000)
		
	}else{
		alert("Maalesef yeterli jetonun yok!")
	}
}



