function oyunYukle(ul){
$('#myRanking').html('')
$('#opponentRanking').html('')
$('#state').html('giris yapildi')
$('#winner').html('')
$("#gameOverSpace").html('')
$("#buttonNewGame").hide()
$('#gamesSayfasi').hide()
$('#siralamaSayfasi').hide()
$('#gidenSayfasi').hide()
$('#kullaniciSayfasi').hide()
$('#gelenSayfasi').hide()
$('#yardimSayfasi').hide()
$('#profilSayfasi').hide()
$('#gidenİstekSayfasi').hide()
$('#istekİptalSayfasi').hide()
$('#messagesSayfasi').hide()
$('#oyunSayfasi').show()
$('#buttonBlack').hide()
$('#buttonWhite').hide()
$('#opponentCodeSpace').html("")
var cw = $('.rowStyle').css('width')
$('.cw').css('height',cw)
for(h=0;h<144;h++){	
 		document.getElementsByClassName('rowStyle')[h].style.background = 'darkgray'
 		document.getElementsByClassName('ballSpan')[h].innerHTML = '' 		
 		document.getElementsByClassName('determiner')[h].style.borderColor= "darkgray" 	
 		document.getElementsByClassName('determiner')[h].style.background= "darkgray" 		 	 
 	}
var oyunMesaji=ul.innerHTML
var mesajBasi = oyunMesaji.indexOf('@@')
var mesajSonu = oyunMesaji.indexOf('##')
var gKey = oyunMesaji.slice(mesajBasi+2,mesajSonu)
$('#keySpace').html(gKey)
var ismSonu = oyunMesaji.indexOf('@@')
var rakipİsmi=oyunMesaji.slice(27,ismSonu)
$('#nameSpace').html(rakipİsmi)

var oyuncular = []
var oyuncuKeys = []
var query = firebase.database().ref("kullanicilar/"); 
 query.on('value', function (snapshot){ 
 snapshot.forEach(function (childSnapshot){  
 var data = childSnapshot.val();
 oyuncular.push(data.user)
 oyuncuKeys.push(data.kullaniciKodu)
});
});
setTimeout(function(){
var rakipNo = oyuncular.indexOf(rakipİsmi)
$('#opponentCodeSpace').html(oyuncuKeys[rakipNo])

},400)


var kullaniciAdi = localStorage.getItem('kullaniciAdi')
var query = firebase.database().ref("oyunlar/"+gKey); 
 query.on('value', function (snapshot){  
 snapshot.forEach(function (childSnapshot){  
 var data = snapshot.val();
 var rkpAdi = $('#nameSpace').html()
 localStorage.setItem('telRakip',rkpAdi) 
  
 if((data.from == kullaniciAdi && data.with == rkpAdi) || (data.from == rkpAdi && data.with == kullaniciAdi)){
 
 $('#kulid').html('@'+rakipİsmi)
 $('#rakid').html('@'+kullaniciAdi)
 $('#gameOwnerSpace').html(data.from)
 $('#gameOpponentSpace').html(data.with)
 
if($('#gameOwnerSpace').html()==kullaniciAdi){
$('#benPuan').html(data.skorFrom)
$('#rakipPuan').html(data.skorWith)		
}else if($('#gameOwnerSpace').html()!=kullaniciAdi){
$('#benPuan').html(data.skorWith)
$('#rakipPuan').html(data.skorFrom)		
}

}

 });
 });
 
$('#sheet').html('oyun alani sayfasi')	

var veri=[]
var veriKullaniciKodu=[]
var veriPuantaj=[]
var veriPuan = []
var veriUser=[]
var querQ = firebase.database().ref("kullanicilar"); 
querQ.on('value', function (snapshot){
snapshot.forEach(function (childSnapshot){
var data = childSnapshot.val();
veri.push(data.kullaniciKodu)		
veri.push(data.toplamPuan)
veri.push(data.user)
});
});

setTimeout(function(){

for(i=0;i<(veri.length)/3;i++){
	veriKullaniciKodu.push(veri[3*i])
	veriPuantaj.push(veri[3*i+1])
	veriPuan.push(veri[3*i+1])
	veriUser.push(veri[3*i+2])
	}
var exa = []
var siraliNameList=[]
for(i=0;i<(veri.length)/3;i++){
exa[i] = [veriKullaniciKodu[i],veriPuantaj[i],veriUser[i]]
}
var sfx = (veri.length)/3
for(i=0;i<sfx;i++){
veriPuantaj.sort(function(a,b){
return b-a;
});
var bigIndex = veriPuan.indexOf(veriPuantaj[0])
siraliNameList.push(exa[bigIndex][2])
exa.splice(bigIndex,1)
veriPuan.splice(bigIndex,1)
veriPuantaj.shift()
}

var userRanking = siraliNameList.indexOf(kullaniciAdi)+1
var opponentRanking = siraliNameList.indexOf(rakipİsmi)+1
$('#myRanking').html(userRanking)
$('#opponentRanking').html(opponentRanking)

$('.ballSpan').css('display','none')
grafikYukle();



},300)





}





function gameErase(op){
var erMesaji=op.innerHTML
var erBasi = erMesaji.indexOf('**')
var erSonu = erMesaji.indexOf('##')
var eKey = erMesaji.slice(erBasi+2,erSonu)

var oyunBasi = erMesaji.indexOf('__')
var oyunSonu = erMesaji.indexOf('$$')
var oyunKey = erMesaji.slice(oyunBasi+2,oyunSonu)

var kisiBasi = erMesaji.indexOf('#p@')
var kisiSonu = erMesaji.indexOf('@p#')
var person = erMesaji.slice(kisiBasi+3,kisiSonu)

var kullaniciAdi = localStorage.getItem('kullaniciAdi')

var tarih = new Date()
 var saat = Number(tarih.getHours())
 var dakika = parseInt(tarih.getMinutes())
 		if(dakika<10){
 		var dakika = "0" + dakika
		 }
		 if(saat<10){
 		var saat = "0" + saat
		 }
 var gun = parseInt(tarih.getDate())
 var ay = parseInt(tarih.getMonth())+1
 var yil = parseInt(tarih.getFullYear())
 		if(gun<10){
 		var gun = "0" + gun
		 }
		 if(ay<10){
 		var ay = "0" + ay
		 }

if(oyunKey=='yeni oyun'){
var event = confirm("Oyun bitmeden oyunu silemezsiniz! Oyununuz tıkanmış ise rakibinizden onay alarak bu oyunu silebilirsiniz. Rakibinize onay mesajı göndermek istiyor musunuz?")
if(event==true){
silmeKodu=firebase.database().ref("silme istekleri").push().key
	firebase.database().ref('silme istekleri/'+silmeKodu).set({
    silmeFrom: kullaniciAdi,
	  silmeWith: person,
	  silmeKodu: silmeKodu,
	  silinecekOyunKodu: eKey,
	  tarih: gun+'.'+ay+'.'+yil+'-'+saat+':'+dakika,
  });
}

}else{
var olay = confirm("Oyun kullanıcılardan karşılıklı olarak silinecektir!")
if(olay==true){
var querE = firebase.database().ref("oyunlar/"+eKey); 
querE.remove()
}
}

}


function profilYukle(pl){
$('#profilRankingSpace').html('')
$('#gamesSayfasi').hide()
$('#oyunSayfasi').hide()
$('#yardimSayfasi').hide()
$('#gelenSayfasi').hide()
$('#siralamaSayfasi').hide()
$('#gidenSayfasi').hide()
$('#kullaniciSayfasi').hide()
$('#gidenİstekSayfasi').hide()
$('#messagesSayfasi').hide()
$('#istekİptalSayfasi').hide()
$('#profilSayfasi').show()

var oyunMesaji=pl.innerHTML
var ismBasi = oyunMesaji.indexOf('none">')
var ismSonu = oyunMesaji.indexOf('@@')
var rakipİsmi=oyunMesaji.slice(ismBasi+6,ismSonu)
$('#profilSpanAdi').html(' @'+rakipİsmi)

var querP = firebase.database().ref("kullanicilar"); 
querP.on('value', function (snapshot){
snapshot.forEach(function (childSnapshot){
var data = childSnapshot.val();
if(data.user==rakipİsmi){
$('#profilToplamPuan').html(data.toplamPuan)
$('#profilPuan').html(data.puantaj)
$('#profilBitenOyunSpace').html(data.bitenOyun)
$('#profilJetonSpace').html(data.tasPuan)
}
});
});


var veri=[]
var veriKullaniciKodu=[]
var veriPuantaj=[]
var veriPuan = []
var veriUser=[]
var querQ = firebase.database().ref("kullanicilar"); 
querQ.on('value', function (snapshot){
snapshot.forEach(function (childSnapshot){
var data = childSnapshot.val();
veri.push(data.kullaniciKodu)		
veri.push(data.toplamPuan)
veri.push(data.user)
});
});

setTimeout(function(){

for(i=0;i<(veri.length)/3;i++){
	veriKullaniciKodu.push(veri[3*i])
	veriPuantaj.push(veri[3*i+1])
	veriPuan.push(veri[3*i+1])
	veriUser.push(veri[3*i+2])
	}
var exa = []
var siraliNameList=[]
for(i=0;i<(veri.length)/3;i++){
exa[i] = [veriKullaniciKodu[i],veriPuantaj[i],veriUser[i]]
}
var sfx = (veri.length)/3
for(i=0;i<sfx;i++){
veriPuantaj.sort(function(a,b){
return b-a;
});
var bigIndex = veriPuan.indexOf(veriPuantaj[0])
siraliNameList.push(exa[bigIndex][2])
exa.splice(bigIndex,1)
veriPuan.splice(bigIndex,1)
veriPuantaj.shift()
}

var opponentRanking = siraliNameList.indexOf(rakipİsmi)+1
$('#profilRankingSpace').html(opponentRanking)

$('#byuzdeProfil').html("")
var tP = $('#profilPuan').html()
var tB = $('#profilBitenOyunSpace').html()
if(tB==0 || tP==0){
$('#byuzdeStyleProfil').css('width','0%')
}else{
var basariYuzdesi = Math.floor((tP*100)/tB)
$('#byuzdeProfil').html("%"+basariYuzdesi)
$('#byuzdeStyleProfil').css('width',basariYuzdesi+'%')
}

},300)


}



function hamleSirasi(){
var oyunKeys = []
var players = []
var siralarKimde = []
var kullaniciAdi = localStorage.getItem('kullaniciAdi')
var query = firebase.database().ref("oyunlar");
query.on('value', function (snapshot){
snapshot.forEach(function (childSnapshot){
var dataP = childSnapshot.val();
if(dataP.from==kullaniciAdi || dataP.with == kullaniciAdi){
oyunKeys.push(dataP.oyunkodu)
}
});
});
 for(d=0;d<oyunKeys.length;d++){
	var queryV = firebase.database().ref("oyunlar/"+oyunKeys[d]);
	queryV.on('value', function (snapshot){
	snapshot.forEach(function (childSnapshot){
		var dataH = childSnapshot.val();
		players.push(dataH.with)
	});
	});
 siralarKimde.push(players[players.length-7])
 }

}


