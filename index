var oyunKeys = []
var players = []
var oyunDurumu = []
var sonOynayanlar = []
var kullaniciAdi = localStorage.getItem('kullaniciAdi')
var query = firebase.database().ref("oyunlar");
query.on('value', function (snapshot){
snapshot.forEach(function (childSnapshot){
var dataP = childSnapshot.val();
if(dataP.from==kullaniciAdi || dataP.with == kullaniciAdi){
oyunKeys.push(dataP.oyunkodu)
oyunDurumu.push(dataP.oyun)
}
});
});
 for(d=0;d<oyunKeys.length;d++){
	var queryV = firebase.database().ref("oyunlar/"+oyunKeys[d]);
	queryV.on('value', function (snapshot){
	snapshot.forEach(function(childSnapshot){
		var dataH = childSnapshot.val();
			players.push(dataH.from)
		});
	});
	
	if(players[players.length-8]==undefined){
	sonOynayanlar.push("bosluk")
	}else if(players[players.length-8]!=undefined){
	sonOynayanlar.push(players[players.length-8])
	}
 
 }
 
for(g=0;g<oyunlar.length;g++){
	if(sonOynayanlar[g]=="bosluk"){
	document.getElementsByClassName("fas fa-circle oyunBild")[g].style.color = "#c8e6c9"
	}else if(sonOynayanlar[g]!=kullaniciAdi && oyunDurumu[g]=="yeni oyun"){
		document.getElementsByClassName("fas fa-circle oyunBild")[g].style.color = "red"
	}else if(sonOynayanlar[g]==kullaniciAdi || oyunDurumu[g]!="yeni oyun"){
	document.getElementsByClassName("fas fa-circle oyunBild")[g].style.color = "#c8e6c9"
	}
}


sohbetKodlari = []
mesajKisileri = []
sonKisi = []
okundular = []
sonOkundu =  []
var queryK = firebase.database().ref("oyunlar");
queryK.on('value', function (snapshot){
snapshot.forEach(function (childSnapshot){
var dataD = childSnapshot.val();
if(dataD.from == kullaniciAdi || dataD.with == kullaniciAdi){
sohbetKodlari.push(dataD.oyunkodu)
}
});
});
for(b=0;b<sohbetKodlari.length;b++){
var queryC = firebase.database().ref("oyunlar/"+sohbetKodlari[b]+'/mesajlar');
queryC.on('value', function (snapshot){
snapshot.forEach(function (childSnapshot){
var dataC = childSnapshot.val();
mesajKisileri.push(dataC.gonderici)
okundular.push(dataC.okundu)
});
sonKisi.push(mesajKisileri[mesajKisileri.length-3])
sonOkundu.push(okundular[okundular.length-3])
});
}

for(k=0;k<sonKisi.length;k++){
	if(sonKisi[k]==kullaniciAdi || sonKisi[k] == undefined){
		document.getElementsByClassName("fas fa-circle mesajBild")[k].style.color = "#c8e6c9"
	}else if(sonKisi[k]!=kullaniciAdi && sonKisi[k] != undefined&&sonOkundu[k]=="hayir"){
	document.getElementsByClassName("fas fa-circle mesajBild")[k].style.color = "red"
	}
}


},1500)
}



function istekYukle(){
var istekler=[]
var kullaniciAdi = localStorage.getItem('kullaniciAdi')
var gelenBaslik = "<h3><u>Gelen İstekler</u></h3>"
var query = firebase.database().ref("istekler"); 
 query.on('value', function (snapshot){  
 $("#gelenSayfasiBody").html("")
 $("#gelenSayfasiBody").append(gelenBaslik)
 snapshot.forEach(function (childSnapshot){  
 var data = childSnapshot.val(); 
 
 
 var istekKisisi1 = `<div class="d-flex justify-content" style="margin-top:16px;font-size:16px"> 
 <div class="alert alert-info" role="alert"> 
 `+ data.with + `<span style="display:none">??`+data.istekkodu+`??</span>
 <button type="button" onClick="istekKabulEt(this)" class="btn btn-success" style= "float:right;margin-top:-5px"><span style="display:none">??`+data.istekkodu+`!!</span><span style="display:none">**`+data.with+`##</span>Kabul Et</button>
 <button type="button" onClick="istekYoksay(this)" class="btn btn-danger" style= "float:right;margin-right:15px;margin-top:-5px"><span style="display:none">??`+data.istekkodu+`!!</span>Yoksay</button>
 </div> 
 </div>`;  
 
 var istekKisisi2 = `<div class="d-flex justify-content" style="margin-top:16px;font-size:16px"> 
 <div class="alert alert-info" role="alert"> <b>
 `+ data.from + `</b><span style="display:none">??`+data.istekkodu+`??</span><br>
 <span>`+data.tarih+`</span>
 <button type="button" onClick="istekKabulEt(this)" class="btn btn-success" style= "float:right;margin-top:-16px"><span style="display:none">??`+data.istekkodu+`!!</span><span style="display:none">**`+data.from+`##</span>Kabul Et</button>
 <button type="button" onClick="istekYoksay(this)" class="btn btn-danger" style= "float:right;margin-right:15px;margin-top:-16px"><span style="display:none">??`+data.istekkodu+`!!</span>Yoksay</button>
 </div> 
 </div>`;  
 
 if(data.from==kullaniciAdi){
 
 }else if(data.with==kullaniciAdi){
 $("#gelenSayfasiBody").append(istekKisisi2);
 istekler.push(istekKisisi2)
 }
 });
 });
 $('#bildirimSayisi').html(istekler.length)
}



