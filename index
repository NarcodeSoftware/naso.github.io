}else{
$('#badgeİstek').hide()
}
$('#sheet').html('istek gonder sayfasi')
}


function user(){
istekSay()
$('#badgeİstek').html($('#bildirimSayisi').html())
if($('#badgeİstek').html()!=0){
$('#badgeİstek').show()
}else{
$('#badgeİstek').hide()
}
$('#gamesSayfasi').hide()
$('#oyunSayfasi').hide()
$('#yardimSayfasi').hide()
$('#gelenSayfasi').hide()
$('#siralamaSayfasi').hide()
$('#gidenSayfasi').hide()
$('#profilSayfasi').hide()
$('#gidenİstekSayfasi').hide()
$('#loginSayfasi').hide()
$('#registerSayfasi').hide()
$('#messagesSayfasi').hide()
$('#istekİptalSayfasi').hide()
$('#yeniOzelliklerSayfasi').hide()
$('#kullaniciSayfasi').show()

var veri=[]
var veriKullaniciKodu=[]
var veriPuantaj=[]
var veriPuan = []
var veriUser=[]
var kullaniciAdi = localStorage.getItem('kullaniciAdi')
var querP = firebase.database().ref("kullanicilar"); 
querP.on('value', function (snapshot){
snapshot.forEach(function (childSnapshot){
var data = childSnapshot.val();
veri.push(data.kullaniciKodu)		
veri.push(data.toplamPuan)
veri.push(data.user)
});
});

setTimeout(function(){

for(i=0;i<(veri.length)/3;i++){
	veriKullaniciKodu.push(veri[3*i])
	veriPuantaj.push(veri[3*i+1])
	veriPuan.push(veri[3*i+1])
	veriUser.push(veri[3*i+2])
	}
var exa = []
var siraliNameList=[]
for(i=0;i<(veri.length)/3;i++){
exa[i] = [veriKullaniciKodu[i],veriPuantaj[i],veriUser[i]]
}
var sfx = (veri.length)/3
for(i=0;i<sfx;i++){
veriPuantaj.sort(function(a,b){
return b-a;
});
var bigIndex = veriPuan.indexOf(veriPuantaj[0])
siraliNameList.push(exa[bigIndex][2])
exa.splice(bigIndex,1)
veriPuan.splice(bigIndex,1)
veriPuantaj.shift()
}
var userRanking = siraliNameList.indexOf(kullaniciAdi)+1
$('#rankingSpace').html(userRanking)


var kullaniciKodu = $('#userCodeSpace').html()
var querQ = firebase.database().ref("kullanicilar/"+kullaniciKodu); 
querQ.on('value', function (snapshot){
snapshot.forEach(function (childSnapshot){
var data = snapshot.val();
$('#tPuan').html(data.puantaj)
$('#bitenOyunSpace').html(data.bitenOyun)
$('#byuzde').html("")
$('#byuzde2').html("")
var tP = $('#tPuan').html()
var tB = $('#bitenOyunSpace').html()
if(tB==0 || tP==0){
$('#byuzdeStyle').css('width','0%')
}else{
var basariYuzdesi = Math.floor((tP*100)/tB)
$('#byuzde').html("%"+basariYuzdesi)
$('#byuzde2').html("%"+basariYuzdesi)
$('#byuzdeStyle').css('width',basariYuzdesi+'%')
}
});
});

},400)
$('#sheet').html('kullanici sayfasi')	
}




function oyunSilmeİstek(){
$('#gamesSayfasi').hide()
$('#siralamaSayfasi').hide()
$('#gidenSayfasi').hide()
$('#kullaniciSayfasi').hide()
$('#oyunSayfasi').hide()
$('#yardimSayfasi').hide()
$('#profilSayfasi').hide()
$('#gelenSayfasi').hide()
$('#loginSayfasi').hide()
$('#registerSayfasi').hide()
$('#messagesSayfasi').hide()
$('#gidenİstekSayfasi').hide()
$('#yeniOzelliklerSayfasi').hide()
$('#istekİptalSayfasi').show()

var iptalİstekler=[]
var kullaniciAdi = localStorage.getItem('kullaniciAdi')
var iptalBaslik = "<h3><u>Oyun Silme İstekleri</u></h3>"
var query = firebase.database().ref("silme istekleri"); 
 query.on('value', function (snapshot){  
 $("#istekİptalSayfasiBody").html("")
 $("#istekİptalSayfasiBody").append(iptalBaslik)
 snapshot.forEach(function (childSnapshot){  
 var data = childSnapshot.val(); 
 
 
 var iptalKisisi = `<div class="d-flex justify-content" style="margin-top:16px;font-size:16px"> 
 <div class="alert alert-info" role="alert"> <b>
 `+ data.silmeFrom + `</b><span style="display:none">??`+data.silmeKodu+`??</span><br>
 <span>`+data.tarih+`</span>
 <button type="button" onClick="silmeKabulEt(this)" class="btn btn-success" style= "float:right;margin-top:-16px"><span style="display:none">??`+data.silmeKodu+`!!</span><span style="display:none">**`+data.silmeFrom+`##</span><span style="display:none">@@`+data.silinecekOyunKodu+`*x</span>Onayla</button>
 <button type="button" onClick="silmeYoksay(this)" class="btn btn-danger" style= "float:right;margin-right:15px;margin-top:-16px"><span style="display:none">??`+data.silmeKodu+`!!</span>Reddet</button>
 </div> 
 </div>`;  
 
 if(data.silmeWith==kullaniciAdi){
 $("#istekİptalSayfasiBody").append(iptalKisisi);
 }
 });
 });

}




