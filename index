function login(){
if($('#kadiGiris').val()!='' && $('#parolaGiris').val()!=''){

$('#loginDurumSpace').html('')
var kullanici = $('#kadiGiris').val()
var sifre = $('#parolaGiris').val()
var querQ = firebase.database().ref("kullanicilar"); 
querQ.on('value', function (snapshot){
snapshot.forEach(function (childSnapshot){
var data = childSnapshot.val();
		if(data.user==kullanici && data.şifre==sifre){
			$('#loginDurumSpace').html('Kullanıcı başarıyla doğrulandı. Lütfen bekleyiniz..')
			localStorage.setItem('kullaniciKodu',data.kullaniciKodu)
			localStorage.setItem('userCode',data.kullaniciKodu)
			$('#userCodeSpace').html(data.kullaniciKodu)
			$('#tPuan').html(data.puantaj)
		return false;
		}else{
			if($('#loginDurumSpace').html()==""){
				$('#loginDurumSpace').html('Lütfen bekleyiniz..')
			}
		}
});
});

setTimeout(function(){
if($('#loginDurumSpace').html()=='Kullanıcı başarıyla doğrulandı. Lütfen bekleyiniz..'){
localStorage.setItem('kullaniciAdi',kullanici)
kayitliUyeGirisi();
}else{
alert("Hatalı giriş yapıldı! Lütfen tekrar giriş yapınız.")
}
},3500)

}
}



function oturumKapat(){
var olay = confirm("Oturumunuz kapatılacak?")
if(olay==true){
allLocalStoragesDelete()
alert("Oturumunuz başarıyla kapatılmıştır.")
window.location.reload(false)
}
}


