function grafikYukle(){
var sd = []
var shn = []
var kullaniciAdi = localStorage.getItem('kullaniciAdi')
var kullaniciKodu = localStorage.getItem('userCode')
var rakipAdi = $('#gameOpponentSpace').html()
var oyunKodu = $('#keySpace').html()
var query = firebase.database().ref("oyunlar/"+oyunKodu); 

 query.on('value', function (snapshot){
 var dataP = snapshot.val()
 var rkpAdi = $('#nameSpace').html()
 
 if((dataP.from == kullaniciAdi && dataP.with == rkpAdi) || (dataP.from == rkpAdi && dataP.with == kullaniciAdi)){
 
 $('#winner').html('')
 var ts = 0
 
 		$('.ballSpan').css('display','none')
		$('.rowStyle').css('background','darkgray')
		for(h=0;h<144;h++){	
 		document.getElementsByClassName('ballSpan')[h].innerHTML = ''
 		document.getElementsByClassName('determiner')[h].style.borderColor= "darkgray"
 		 }
 	
 snapshot.forEach(function (childSnapshot){  
   var data = childSnapshot.val()
    var rkpAdi = $('#nameSpace').html()
 
 
   var gemData = data.hamle
   var bOrS = gemData.charAt(gemData.length-1)
   var lcl = gemData.slice(0,gemData.indexOf('-'))
   if(bOrS=='B'){
   document.getElementsByClassName('rowStyle')[lcl].style.background = 'black'
   ts = ts + 1
   document.getElementsByClassName('ballSpan')[lcl].innerHTML = ts
   document.getElementsByClassName('bsDate')[lcl].innerHTML = data.tarih
   document.getElementsByClassName('ballSpan')[lcl].style.display= "none"
   sd.push("B")
   shn.push(lcl)
   }else if(bOrS=='W'){
   document.getElementsByClassName('rowStyle')[lcl].style.background = 'orange'
   ts = ts + 1
   document.getElementsByClassName('ballSpan')[lcl].innerHTML = ts
   document.getElementsByClassName('bsDate')[lcl].innerHTML = data.tarih
   document.getElementsByClassName('ballSpan')[lcl].style.display= "none"
   sd.push("W")
   shn.push(lcl)
   }
   
   
});
}
});

var bosluk = 0
for(d=0;d<=143;d++){
	if(document.getElementsByClassName('rowStyle')[d].style.background=="darkgray"){
			bosluk = bosluk + 1
	}
	
}
if(bosluk==144){
sd.splice(0,sd.length)
}
 
query.on('value', function (snapshot){
snapshot.forEach(function (childSnapshot){
var data = snapshot.val()
var sonSd = sd[sd.length-1]
if(sonSd=="B" && document.getElementById('gameOwnerSpace').innerHTML==kullaniciAdi){
$('#buttonBlack').hide()
$('#buttonWhite').hide()
}else if(sonSd=="W" && document.getElementById('gameOwnerSpace').innerHTML==kullaniciAdi){
$('#buttonBlack').show()
$('#buttonWhite').hide()
}else if(sonSd=="B" && document.getElementById('gameOwnerSpace').innerHTML!=kullaniciAdi){
$('#buttonBlack').hide()
$('#buttonWhite').show()
}else if(sonSd=="W" && document.getElementById('gameOwnerSpace').innerHTML!=kullaniciAdi){
$('#buttonBlack').hide()
$('#buttonWhite').hide()
}else if(sonSd==undefined && document.getElementById('gameOwnerSpace').innerHTML==kullaniciAdi){
$('#buttonBlack').show()
$('#buttonWhite').hide()
}else if(sonSd==undefined && document.getElementById('gameOwnerSpace').innerHTML!=kullaniciAdi){
$('#buttonBlack').hide()
$('#buttonWhite').hide()
}

var sonShn = shn[shn.length-1]
document.getElementsByClassName('ballSpan')[sonShn].style.display= "block"
$("#buttonNewGame").hide()




for(d=0;d<=143;d++){

if(document.getElementsByClassName('rowStyle')[d].style.background=="orange"){
 		 		document.getElementsByClassName('determiner')[d].style.borderColor="orange"
 		 		document.getElementsByClassName('determiner')[d].style.background="orange"
 		 }
 		 
 		 if(document.getElementsByClassName('rowStyle')[d].style.background=="black"){
 		 		document.getElementsByClassName('determiner')[d].style.borderColor="black"
 		 		document.getElementsByClassName('determiner')[d].style.background="black"
 		 }
 		 
 		 if(document.getElementsByClassName('rowStyle')[d].style.background=="darkgray"){
 		 		document.getElementsByClassName('determiner')[d].style.borderColor="darkgray"
 		 }
 		 
 		 if(document.getElementsByClassName('rowStyle')[d].style.background=="green"){
 		 		document.getElementsByClassName('determiner')[d].style.display="none"
 		 }
 		 
 		 if(document.getElementsByClassName('ballSpan')[d].style.display=="block"){
 		 		document.getElementsByClassName('determiner')[d].style.display="none"
 		 }

}


if($('#gameOwnerSpace').html()==kullaniciAdi){
$('#benPuan').html(data.skorFrom)
$('#rakipPuan').html(data.skorWith)		
}else if($('#gameOwnerSpace').html()!=kullaniciAdi){
$('#benPuan').html(data.skorWith)
$('#rakipPuan').html(data.skorFrom)		
}

});
controlVertical()
controlHorizontal()
controlRightToLeft()
controlLeftToRight()

var queryY=firebase.database().ref('kullanicilar/' + kullaniciKodu)
queryY.on('value',function(snapshot){
var dataY=snapshot.val()
localStorage.setItem('bitenOyunum',dataY.bitenOyun)
});

setTimeout(function(){
var rkpKey = $('#opponentCodeSpace').html()
var queryZ=firebase.database().ref('kullanicilar/' + rkpKey)
queryZ.on('value',function(snapshot){
var dataZ=snapshot.val()
localStorage.setItem('rakipBitenOyun',dataZ.bitenOyun)
});
},450)




clickSoundGet();



if($('#buttonNewGame').css('display')=='block'){
$("#gameOverSpace").html('Game Over!')
for(f=0;f<=143;f++){
document.getElementsByClassName('determiner')[f].style.display="none"
}
}				
});
istekSay()
$('#badgeİstek').html($('#bildirimSayisi').html())
if($('#badgeİstek').html()!=0){
$('#badgeİstek').show()
}else{
$('#badgeİstek').hide()
}			
}


function newGame2(){
$("#gameOverSpace").html('')
oyunKodu=$('#keySpace').html()
var query = firebase.database().ref("oyunlar/"+oyunKodu); 
var isim = document.getElementById("nameSpace").innerHTML
var kullaniciAdi = localStorage.getItem('kullaniciAdi')
var alan = $('#messagesOpponentName').html()
var aliciKisi = alan.slice(1,alan.length)
if($('#gameOwnerSpace').html()==kullaniciAdi){
var skorfrom = $('#benPuan').html()
var skorwith = $('#rakipPuan').html()
}else if($('#gameOwnerSpace').html()!=kullaniciAdi){
var skorfrom = $('#rakipPuan').html()
var skorwith = $('#benPuan').html()
}

	firebase.database().ref('oyunlar/'+oyunKodu).set({
    from:$('#gameOwnerSpace').html(),
    with:$('#gameOpponentSpace').html(),
    oyunkodu:oyunKodu,
    skorFrom:skorfrom,
    skorWith:skorwith,
    oyun: "yeni oyun",
    mesajlar:""
  });
	firebase.database().ref('oyunlar/' + oyunKodu + '/mesajlar').update({ 
   oyuncu1:kullaniciAdi,
   oyuncu2:aliciKisi
	});
	

grafikYukle();

}



