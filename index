function yeniUyeGirisi(){
$('#siralamaSayfasi').hide()
$('#gidenSayfasi').hide()
$('#kullaniciSayfasi').hide()
$('#gelenSayfasi').hide()
$('#yardimSayfasi').hide()
$('#oyunSayfasi').hide()
$("#girisSayfasi").hide()
$('#profilSayfasi').hide()
$('#gidenİstekSayfasi').hide()
$('#loginSayfasi').hide()
$('#registerSayfasi').hide()
$('#messagesSayfasi').hide()
$('#istekİptalSayfasi').hide()
$("#gamesSayfasi").show()
var kadi = $('#kadi').val()
var parola = $('#parolaKayit').val()
localStorage.setItem('kullaniciAdi',kadi)
var kullaniciAdi = localStorage.getItem('kullaniciAdi')
$('#kSpanAdi').html('@'+kullaniciAdi)
var kullaniciKodu=firebase.database().ref("kullanicilar").push().key
	firebase.database().ref('kullanicilar/'+kullaniciKodu).set({
    user:kadi,
    puantaj:0,
    kullaniciKodu:kullaniciKodu,
    şifre:parola,
    bitenOyun:0,
    tasPuan:0,
    toplamPuan:0,
  });
localStorage.setItem('userCode',kullaniciKodu)
var kullaniciKodu = localStorage.getItem('userCode')
var query = firebase.database().ref("kullanicilar")
query.on('value',function(snapshot){
snapshot.forEach(function(childSnapshot){

});
});
$('#tPuan').html("0")
$('#userCodeSpace').html(kullaniciKodu)
gamesYukle()
back()
}

function animeStartWhite(){ 
	 var element=document.getElementById("buttonWhite")
	 setTimeout(function(){
	 	element.classList.add("okBtn-ek")
	 },500)	  	 
	 setTimeout(function(){
	 	element.classList.remove("okBtn-ek")
	 },800)	  
}

function animeStartBlack(){ 
	 var element=document.getElementById("buttonBlack")
	 setTimeout(function(){
	 	element.classList.add("okBtn-ek")
	 },500)	  	 
	 setTimeout(function(){
	 	element.classList.remove("okBtn-ek")
	 },800)	  
}


function burn(el){
var kullaniciAdi = localStorage.getItem('kullaniciAdi')
if($('#gameOwnerSpace').html()==kullaniciAdi){
	var myColor = "black"
}else{var myColor = "orange"}
	 if(el.style.background!='black' && el.style.background!='orange' && el.style.background!='green'){
		boya();
		el.style.background="yellow"
				
			for(f=0;f<=143;f++){
			document.getElementsByClassName('determiner')[f].style.display="block"
if(document.getElementsByClassName('rowStyle')[f].style.background== "black"){
document.getElementsByClassName('determiner')[f].style.display= "none"
}else if(document.getElementsByClassName('rowStyle')[f].style.background== "orange"){
document.getElementsByClassName('determiner')[f].style.display= "none"
}else if(document.getElementsByClassName('rowStyle')[f].style.background== "darkgray"){
document.getElementsByClassName('determiner')[f].style.borderColor= "darkgray"
}
if(document.getElementsByClassName('rowStyle')[f].style.background== "yellow"){
	document.getElementsByClassName('determiner')[f].style.borderColor= myColor
}
			 }		
	}else{	
	var datei=el.innerHTML
	var dateBasi = datei.indexOf("bsDate")
	var datem = datei.slice(dateBasi+8,dateBasi+24)
	alert('Hamle tarihi: '+datem)
	}
}


function boya(){
var bosluk = 0
for(d=0;d<=143;d++){
	if(document.getElementsByClassName('rowStyle')[d].style.background=="darkgray"){
			bosluk = bosluk + 1
	}
}
if(bosluk==144){
animeStartWhite()
animeStartBlack()
}
for(i=0;i<=143;i++){
if(document.getElementsByClassName('rowStyle')[i].style.background=="yellow"){
document.getElementsByClassName('rowStyle')[i].style.background= "darkgray"
document.getElementsByClassName('determiner')[i].style.background= "darkgray"
}
}
}

var renk='black'
var ts = 0

function yerlestirSiyah(){
$('#state').html('')
var isim = $('#nameSpace').html()
var kullaniciAdi = localStorage.getItem('kullaniciAdi')
for(i=0;i<=143;i++){
	if(document.getElementsByClassName('rowStyle')[i].style.background=="yellow"){
	
	var oyunKodu = $('#keySpace').html()
	
var hamleKodu=firebase.database().ref("oyunlar/"+oyunKodu).push().key

var tarih = new Date()
 var saat = Number(tarih.getHours())
 var dakika = parseInt(tarih.getMinutes())
 		if(dakika<10){
 		var dakika = "0" + dakika
		 }
		 if(saat<10){
 		var saat = "0" + saat
		 }
 var gun = parseInt(tarih.getDate())
 var ay = parseInt(tarih.getMonth())+1
 var yil = parseInt(tarih.getFullYear())
 		if(gun<10){
 		var gun = "0" + gun
		 }
		 if(ay<10){
 		var ay = "0" + ay
		 }
	firebase.database().ref('oyunlar/'+oyunKodu+'/'+hamleKodu).set({
    hamle: i+"-B",
    from:kullaniciAdi,
    with:isim,
    tarih:gun+'.'+ay+'.'+yil+'-'+saat+':'+dakika,
  });  
	}
}

var tasSayisi = 0
for(d=0;d<=143;d++){
	if(document.getElementsByClassName('rowStyle')[d].style.background!="darkgray"){
			tasSayisi = tasSayisi + 1
	}
}	

var tasPuan=(144-tasSayisi)+112


var kullaniciKodu = $('#userCodeSpace').html()
var querQ = firebase.database().ref("kullanicilar/"+kullaniciKodu);
		var query = firebase.database().ref("oyunlar/"+oyunKodu);
			if($('#winner').html()=='Black' && $('#state').html()==''){			
				if($('#gameOwnerSpace').html()==kullaniciAdi){
					query.update({
				 		skorFrom:Number($('#benPuan').html())+1,
				 		oyun: "oyun bitti",
					});	
					querQ.update({
				 		puantaj:Number($('#tPuan').html())+1,
				 		toplamPuan:Number($('#toplamPuan').html())+1,
				 		tasPuan:Number($('#tasPuan').html())+tasPuan			 		
					});	
				}else if($('#gameOwnerSpace').html()!=kullaniciAdi){
					query.update({
				 		skorFrom:Number($('#rakipPuan').html())+1,
				 		oyun: "oyun bitti",
					});	
				}
			}else if($('#winner').html()=='White' && $('#state').html()==''){
				if($('#gameOwnerSpace').html()==kullaniciAdi){
					query.update({
				 		skorWith:Number($('#rakipPuan').html())+1,
				 		oyun: "oyun bitti",
					});	
				}else if($('#gameOwnerSpace').html()!=kullaniciAdi){
					query.update({
				 		skorWith:Number($('#benPuan').html())+1,
				 		oyun: "oyun bitti",
					});	
					querQ.update({
				 		puantaj:Number($('#tPuan').html())+1,
				 		toplamPuan:Number($('#toplamPuan').html())+1,
				 		tasPuan:Number($('#tasPuan').html())+tasPuan
					});	
				}
			}
			
			
		if($('#winner').html()=='Black' || $('#winner').html()=='White'){	
			if($('#state').html()==''){
			var biten = localStorage.getItem('bitenOyunum')
			var newS = Number(biten) + 1
			var kullaniciKodu = $('#userCodeSpace').html()
var queryS = firebase.database().ref("kullanicilar/"+kullaniciKodu);
				queryS.update({
					bitenOyun: newS
				});
			}
		}
		
		if($('#winner').html()=='Black' || $('#winner').html()=='White'){	
			if($('#state').html()==''){
			var rakipBiten = localStorage.getItem('rakipBitenOyun')
			var newR = Number(rakipBiten) + 1
			var rakipKodu = $('#opponentCodeSpace').html()
var queryR = firebase.database().ref("kullanicilar/"+rakipKodu);
				queryR.update({
					bitenOyun: newR
				});
			}
		}
			
			

istekSay()
$('#badgeİstek').html($('#bildirimSayisi').html())
if($('#badgeİstek').html()!=0){
$('#badgeİstek').show()
}else{
$('#badgeİstek').hide()
}						

}



function yerlestirBeyaz(){
$('#state').html('')
var isim = $('#nameSpace').html()
var kullaniciAdi = localStorage.getItem('kullaniciAdi')
for(i=0;i<=143;i++){
	if(document.getElementsByClassName('rowStyle')[i].style.background=="yellow"){
	
	var oyunKodu = $('#keySpace').html()
	
	var hamleKodu=firebase.database().ref("oyunlar/"+oyunKodu).push().key
	
	var tarih = new Date()
 var saat = Number(tarih.getHours())
 var dakika = parseInt(tarih.getMinutes())
 		if(dakika<10){
 		var dakika = "0" + dakika
		 }
		 if(saat<10){
 		var saat = "0" + saat
		 }
 var gun = parseInt(tarih.getDate())
 var ay = parseInt(tarih.getMonth())+1
 var yil = parseInt(tarih.getFullYear())
 		if(gun<10){
 		var gun = "0" + gun
		 }
