function controlVertical(){
var tas = document.getElementsByClassName('rowStyle')
for(f=0;f<12;f++){
for(k=0;k<8;k++){
var sayK = 0
var sayM = 0
	for(v=k;v<k+5;v++){
		c=(12*v)+f
			if(tas[c].style.background=='black'){
				sayK = sayK + 1
			}else if(tas[c].style.background=='orange'){
				sayM = sayM + 1
			}
	}
	if(sayK==5){
	$(".ballSpan").css({'display':'block'})
	for(v=k;v<k+5;v++){
		c=(12*v)+f
		tas[c].style.background='green'
	}
	$('#winner').html('Black')
	$("#buttonWhite").hide()
	$("#buttonBlack").hide()
	$("#buttonNewGame").show()
	return false;
	}else if(sayM==5){
	$(".ballSpan").css('display','block')
	for(v=k;v<k+5;v++){
		c=(12*v)+f
		tas[c].style.background='green'
	}
	$('#winner').html('White')
	$("#buttonWhite").hide()
	$("#buttonBlack").hide()
	$("#buttonNewGame").show()
	return false;
	}
}
}
}


function controlHorizontal(){
var tas = document.getElementsByClassName('rowStyle')
for(f=0;f<12;f++){
for(k=12*f;k<(12*f)+8;k++){
var sayK = 0
var sayM = 0
	for(v=k;v<k+5;v++){
			if(tas[v].style.background=='black'){
				sayK = sayK + 1
			}else if(tas[v].style.background=='orange'){
				sayM = sayM + 1
			}
	}
	if(sayK==5){
	$(".ballSpan").css('display','block')
	for(v=k;v<k+5;v++){
		tas[v].style.background='green'
	}
	$('#winner').html('Black')
	$("#buttonWhite").hide()
	$("#buttonBlack").hide()
	$("#buttonNewGame").show()
	return false;
	}else if(sayM==5){
	$(".ballSpan").css('display','block')
	for(v=k;v<k+5;v++){
		tas[v].style.background='green'
	}
	$('#winner').html('White')
	$("#buttonWhite").hide()
	$("#buttonBlack").hide()
	$("#buttonNewGame").show()
	return false;
	}
}
}
}


function controlLeftToRight(){
var tas = document.getElementsByClassName('rowStyle')
for(f=0;f<8;f++){
for(k=0;k<8;k++){
var sayK = 0
var sayM = 0
	for(v=k;v<k+5;v++){
		c=(13*v)+f-k
			if(tas[c].style.background=='black'){
				sayK = sayK + 1
			}else if(tas[c].style.background=='orange'){
				sayM = sayM + 1
			}
	}
	if(sayK==5){
	$(".ballSpan").css('display','block')
	for(v=k;v<k+5;v++){
	 c=(13*v)+f-k
		tas[c].style.background='green'
	}
	$('#winner').html('Black')
	$("#buttonWhite").hide()
	$("#buttonBlack").hide()
	$("#buttonNewGame").show()	
	return false;
	}else if(sayM==5){
	$(".ballSpan").css('display','block')
	for(v=k;v<k+5;v++){
	 c=(13*v)+f-k
		tas[c].style.background='green'
	}
	$('#winner').html('White')
	$("#buttonWhite").hide()
	$("#buttonBlack").hide()
	$("#buttonNewGame").show()
	return false;
	}
}
}
}


function controlRightToLeft(){
var tas = document.getElementsByClassName('rowStyle')
for(f=11;f>=0;f--){
for(k=0;k<=8;k++){
var sayK = 0
var sayM = 0
	for(v=k;v<k+5;v++){
		c=(11*v)+f
			if(tas[c].style.background=='black'){
				sayK = sayK + 1
			}else if(tas[c].style.background=='orange'){
				sayM = sayM + 1
			}
	}
	if(sayK==5){
	$(".ballSpan").css('display','block')
	for(v=k;v<k+5;v++){
	 c=(11*v)+f
		tas[c].style.background='green'
	}
	$('#winner').html('Black')
	$("#buttonWhite").hide()
	$("#buttonBlack").hide()
	$("#buttonNewGame").show()
	return false;
	}else if(sayM==5){
	$(".ballSpan").css('display','block')
	for(v=k;v<k+5;v++){
	 c=(11*v)+f
		tas[c].style.background='green'
	}
	$('#winner').html('White')
	$("#buttonWhite").hide()
	$("#buttonBlack").hide()
	$("#buttonNewGame").show()
	return false;
	}
}
}
}


function newGame(){
ts = 0
$('.ballSpan').html('')
$('.ballSpan').css('display','none')
for(i=0;i<=143;i++){
	document.getElementsByClassName('rowStyle')[i].style.background="darkgray"
}
var key = $('#keySpace').html()
var query = firebase.database().ref("oyunlar/"+key); 
query.on('value', function (snapshot){
snapshot.forEach(function (childSnapshot){ 
$("#buttonNewGame").hide()
});
});

var isim = document.getElementById("nameSpace").innerHTML
var kullaniciAdi = localStorage.getItem('kullaniciAdi')
oyunKodu=firebase.database().ref("oyunlar").push().key
	firebase.database().ref('oyunlar/'+oyunKodu).set({
    from:isim,
    with:kullaniciAdi,
    oyunkodu:oyunKodu,
    skorFrom:"0",
    skorWith:"0",
  });
$('#keySpace').html(oyunKodu)
}



function medalİstekGonder(gl){
var tn = gl.innerHTML
var tnBas = tn.indexOf('#*')
var tnSon = tn.indexOf('?@')
var medalKisi = tn.slice(tnBas+9,tnSon-27)

var olay = confirm(medalKisi + " adlı kullanıcıya oyun isteği gönderilecek?")
if(olay==true){

var istekler = []
var gidenİstekler = []
var kullaniciAdi = localStorage.getItem('kullaniciAdi')
if(medalKisi!=kullaniciAdi){
var rakipAdi = medalKisi
var query = firebase.database().ref("istekler"); 
 query.on('value', function (snapshot){  
 snapshot.forEach(function (childSnapshot){  
 var data = childSnapshot.val(); 
 if(data.from==kullaniciAdi){ 
 gidenİstekler.push(data.with);
 }else if(data.with==kullaniciAdi){
 istekler.push(data.from);
 }
 });
 });
 
var useris = [] 
var querM = firebase.database().ref("kullanicilar"); 
querM.on('value', function (snapshot){
snapshot.forEach(function (childSnapshot){
var data = childSnapshot.val();
useris.push(data.user)
});
});

var myGames = []

var queryZ = firebase.database().ref("oyunlar"); 
 queryZ.on('value', function (snapshot){  
 snapshot.forEach(function (childSnapshot){  
 var dataZ = childSnapshot.val(); 
 if(dataZ.from==kullaniciAdi){
 myGames.push(dataZ.with)
 }
 });
 });
 
  
setTimeout(function(){  
if(istekler.indexOf(rakipAdi)!=-1){
alert("Bu kullanıcıdan size gönderilmiş bir istek zaten var!")
bolt();
}else if(gidenİstekler.indexOf(rakipAdi)!=-1){
alert('Bu kullanıcıya gönderilmiş bir isteğiniz zaten bulunuyor!')
gidenİstek()
}else if(useris.indexOf(rakipAdi)==-1){
alert('Bu isimde bir kullanıcı bulunamadı!')
}else if(myGames.indexOf(rakipAdi)!=-1){
alert('Bu kullanıcı ile zaten devam etmekte olan bir oyununuz bulunmakta!')
$('#rakipKadi').val('')
back()
}else{
var tarih = new Date()
 var saat = Number(tarih.getHours())
 var dakika = parseInt(tarih.getMinutes())
 		if(dakika<10){
 		var dakika = "0" + dakika
		 }
		 if(saat<10){
 		var saat = "0" + saat
		 }
 var gun = parseInt(tarih.getDate())
 var ay = parseInt(tarih.getMonth())+1
 var yil = parseInt(tarih.getFullYear())
 		if(gun<10){
 		var gun = "0" + gun
		 }
		 if(ay<10){
 		var ay = "0" + ay
		 }
 
istekKodu=firebase.database().ref("istekler").push().key
	firebase.database().ref('istekler/'+istekKodu).set({
    from:kullaniciAdi,
    with:rakipAdi,
    istekkodu:istekKodu,
    tarih:gun+'.'+ay+'.'+yil+'-'+saat+':'+dakika,
  });
document.getElementById('rakipKadi').value= ""
alert("Oyun İsteğiniz Başarıyla Gönderildi!")
back();
}

},300)
 
}else{
alert('Kendi kullanıcı adınıza istek gönderemezsiniz!')
}

}
}



function back(){
if($('#gidenİstekSayfasi').css('display')=="block" || $('#istekİptalSayfasi').css('display')=="block" || $('#yeniOzelliklerSayfasi').css('display')=="block" || $('#datayliYardimSayfasi').css('display')=="block"){
	user()
}else{

istekSay()
$('#badgeİstek').html($('#bildirimSayisi').html())
if($('#badgeİstek').html()!=0){
$('#badgeİstek').show()
}else{
$('#badgeİstek').hide()
}

$('#siralamaSayfasi').hide()
$('#gidenSayfasi').hide()
$('#kullaniciSayfasi').hide()
$('#gelenSayfasi').hide()
$('#yardimSayfasi').hide()
$('#oyunSayfasi').hide()
$('#profilSayfasi').hide()
$('#gidenİstekSayfasi').hide()
$('#loginSayfasi').hide()
$('#registerSayfasi').hide()
$('#messagesSayfasi').hide()
$('#istekİptalSayfasi').hide()
$('#yeniOzelliklerSayfasi').hide()
$('#gamesSayfasi').show()
$('#sheet').html('oyunlar sayfasi')
gamesYukle();
}
}

