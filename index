function medal(){
istekSay()
$('#badgeİstek').html($('#bildirimSayisi').html())
var genelBaslik = "<h3><u>Genel Sıralama</u></h3>"
if($('#badgeİstek').html()!=0){
$('#badgeİstek').show()
}else{
$('#badgeİstek').hide()
}
$('#gamesSayfasi').hide()
$('#oyunSayfasi').hide()
$('#yardimSayfasi').hide()
$('#gelenSayfasi').hide()
$('#gidenSayfasi').hide()
$('#kullaniciSayfasi').hide()
$('#profilSayfasi').hide()
$('#gidenİstekSayfasi').hide()
$('#loginSayfasi').hide()
$('#registerSayfasi').hide()
$('#messagesSayfasi').hide()
$('#istekİptalSayfasi').hide()
$('#yeniOzelliklerSayfasi').hide()
$('#siralamaSayfasi').show()

var veri=[]
var veriKullaniciKodu=[]
var veriPuantaj=[]
var veriPuan = []
var veriUser=[]
var querQ = firebase.database().ref("kullanicilar"); 
querQ.on('value', function (snapshot){
snapshot.forEach(function (childSnapshot){
var data = childSnapshot.val();
veri.push(data.kullaniciKodu)		
veri.push(data.toplamPuan)
veri.push(data.user)
});
});

setTimeout(function(){
for(i=0;i<(veri.length)/3;i++){
	veriKullaniciKodu.push(veri[3*i])
	veriPuantaj.push(veri[3*i+1])
	veriPuan.push(veri[3*i+1])
	veriUser.push(veri[3*i+2])
	}
var exa = []
for(i=0;i<(veri.length)/3;i++){
exa[i] = [veriKullaniciKodu[i],veriPuantaj[i],veriUser[i]]
}

$('#siralamaSayfasiBody').html('')
$('#siralamaSayfasiBody').append(genelBaslik)
if((veri.length)/3<=99){
var sfx = (veri.length)/3
}else{
var sfx = 100
}
for(i=0;i<sfx;i++){
veriPuantaj.sort(function(a,b){
return b-a;
});
var bigIndex = veriPuan.indexOf(veriPuantaj[0])
var player = `<div class="d-flex justify-content" style="margin-top:16px;font-size:16px"> 
 <div class="alert alert-info" role="alert" onClick="medalİstekGonder(this)"> 
 <span style="display:block">`+(i+1)+ `- <span style="display:none">#*</span>` + exa[bigIndex][2] +`<span style="display:none">?@</span></span><span style="float:right;margin-top:-22px">Puan: `+ exa[bigIndex][1] +`</span>
 </div> 
 </div>`;  
$('#siralamaSayfasiBody').append(player)
exa.splice(bigIndex,1)
veriPuan.splice(bigIndex,1)
veriPuantaj.shift()
}
},300)

$('#sheet').html('siralama sayfasi')	
}

