function newGame3(){
var isteklerim = []
var kullaniciAdi = localStorage.getItem('kullaniciAdi')
var query = firebase.database().ref("istekler"); 
 query.on('value', function (snapshot){  
 snapshot.forEach(function (childSnapshot){  
 var data = childSnapshot.val(); 
 if(data.with==kullaniciAdi){
 isteklerim.push(data.from);
 }
 });
 });
var rakipAdi = document.getElementById('nameSpace').innerHTML
if(isteklerim.indexOf(rakipAdi)==-1){
var key = $('#keySpace').html()
firebase.database().ref('oyunlar/'+key).remove()
var kullaniciAdi = localStorage.getItem('kullaniciAdi')
istekKodu=firebase.database().ref("istekler").push().key
	firebase.database().ref('istekler/'+istekKodu).set({
    from:kullaniciAdi,
    with:rakipAdi,
    istekkodu:istekKodu,
  });
alert("Oyun İsteğiniz Başarıyla Gönderildi!")
$('#buttonNewGame').hide()
back();
}else{
alert("Bu kullanıcıdan size gönderilmiş bir istek zaten var!")
$('#rakipKadi').val('')
bolt();
}
}



function istekİptal(ipl){
var iptalMesaji=ipl.innerHTML
var iptalBasi = iptalMesaji.indexOf('#*')
var iptalSonu = iptalMesaji.indexOf('?!')
var istekKey = iptalMesaji.slice(iptalBasi+2,iptalSonu)
firebase.database().ref('istekler/'+istekKey).remove()
alert("Oyun isteğiniz iptal edildi.")
}




function istekYoksay(al){
var keyMesaji=al.innerHTML
var mesajBasi = keyMesaji.indexOf('??')
var mesajSonu = keyMesaji.indexOf('!!')
var iKey = keyMesaji.slice(mesajBasi+2,mesajSonu)
firebase.database().ref('istekler/'+iKey).remove()
istekYukle()
}

function istekKabulEt(ol){
var keyMesaji=ol.innerHTML
var mesajBasi = keyMesaji.indexOf('??')
var mesajSonu = keyMesaji.indexOf('!!')
var iKey = keyMesaji.slice(mesajBasi+2,mesajSonu)
var isimMesaji=ol.innerHTML
var isimBasi = isimMesaji.indexOf('**')
var isimSonu = isimMesaji.indexOf('##')
var isim = isimMesaji.slice(isimBasi+2,isimSonu)
var kullaniciAdi = localStorage.getItem('kullaniciAdi')
var rakipAdi = document.getElementById('rakipKadi').value
var alan = $('#messagesOpponentName').html()
var aliciKisi = isim
oyunKodu=firebase.database().ref("oyunlar").push().key
	firebase.database().ref('oyunlar/'+oyunKodu).set({
    from:isim,
    with:kullaniciAdi,
    oyunkodu:oyunKodu,
    skorFrom:"0",
    skorWith:"0",
    oyun:"yeni oyun",
    mesajlar:"",
  });
firebase.database().ref('oyunlar/' + oyunKodu + '/mesajlar').update({ 
   oyuncu1:aliciKisi,
   oyuncu2:kullaniciAdi,
});
firebase.database().ref('istekler/'+iKey).remove()
back();
}


function silmeKabulEt(ol){
var keyMesaji=ol.innerHTML
var mesajBasi = keyMesaji.indexOf('??')
var mesajSonu = keyMesaji.indexOf('!!')
var iKey = keyMesaji.slice(mesajBasi+2,mesajSonu)
var isimMesaji=ol.innerHTML
var isimBasi = isimMesaji.indexOf('**')
var isimSonu = isimMesaji.indexOf('##')
var isim = isimMesaji.slice(isimBasi+2,isimSonu)
var kullaniciAdi = localStorage.getItem('kullaniciAdi')
var rakipAdi = document.getElementById('rakipKadi').value
var alan = $('#messagesOpponentName').html()
var aliciKisi = isim
var sKeyBasi = keyMesaji.indexOf('@@')
var sKeySonu = keyMesaji.indexOf('*c')
var sKey = keyMesaji.slice(sKeyBasi+2,sKeySonu-14)

firebase.database().ref("oyunlar/"+sKey).remove()
firebase.database().ref("silme istekleri/"+iKey).remove()
alert("Oyununuz başarıyla silindi.")
back()
}


function silmeYoksay(al){
var keyMesaji=al.innerHTML
var mesajBasi = keyMesaji.indexOf('??')
var mesajSonu = keyMesaji.indexOf('!!')
var iKey = keyMesaji.slice(mesajBasi+2,mesajSonu)
firebase.database().ref("silme istekleri/"+iKey).remove()
}


function sayacOlustur(){
var query = firebase.database().ref('sayaçlar/giriş sayacı')
query.on('value',function(snapshot){
var data = snapshot.val()
var oldG = Number(data.Giriş)
var newG = oldG + 1
localStorage.setItem('girisSayisi',newG)
});

firebase.database().ref('sayaçlar/giriş sayacı').update({
Giriş:localStorage.getItem('girisSayisi'),
});
}




function istekGonder(){
var isteklerim = []
var gidenİsteklerim = []
var oyunlarim = []
var kullaniciAdi = localStorage.getItem('kullaniciAdi')
if($('#rakipKadi').val()!=kullaniciAdi){
var rakipAdi = document.getElementById('rakipKadi').value
var query = firebase.database().ref("istekler"); 
 query.on('value', function (snapshot){  
 snapshot.forEach(function (childSnapshot){  
 var data = childSnapshot.val(); 
 if(data.from==kullaniciAdi){ 
 gidenİsteklerim.push(data.with);
 }else if(data.with==kullaniciAdi){
 isteklerim.push(data.from);
 }
 });
 });
 
var useres = [] 
var querM = firebase.database().ref("kullanicilar"); 
querM.on('value', function (snapshot){
snapshot.forEach(function (childSnapshot){
var data = childSnapshot.val();
useres.push(data.user)
});
});

var queryZ = firebase.database().ref("oyunlar"); 
 queryZ.on('value', function (snapshot){  
 snapshot.forEach(function (childSnapshot){  
 var dataZ = childSnapshot.val(); 
 if(dataZ.from==kullaniciAdi){
 oyunlarim.push(dataZ.with)
 }
 });
 });

  
setTimeout(function(){  
if(isteklerim.indexOf(rakipAdi)!=-1){
alert("Bu kullanıcıdan size gönderilmiş bir istek zaten var!")
$('#rakipKadi').val('')
bolt();
}else if(gidenİsteklerim.indexOf(rakipAdi)!=-1){
alert('Bu kullanıcıya gönderilmiş bir isteğiniz zaten bulunuyor!')
$('#rakipKadi').val('')
gidenİstek()
}else if(useres.indexOf(rakipAdi)==-1){
alert('Bu isimde bir kullanıcı bulunamadı!')
$('#rakipKadi').val('')
}else if(oyunlarim.indexOf(rakipAdi)!=-1){
alert('Bu kullanıcı ile zaten devam etmekte olan bir oyununuz bulunmakta!')
$('#rakipKadi').val('')
back()
}else{
var tarih = new Date()
 var saat = Number(tarih.getHours())
 var dakika = parseInt(tarih.getMinutes())
 		if(dakika<10){
 		var dakika = "0" + dakika
		 }
		 if(saat<10){
 		var saat = "0" + saat
		 }
 var gun = parseInt(tarih.getDate())
 var ay = parseInt(tarih.getMonth())+1
 var yil = parseInt(tarih.getFullYear())
 		if(gun<10){
 		var gun = "0" + gun
		 }
		 if(ay<10){
 		var ay = "0" + ay
		 }
 
istekKodu=firebase.database().ref("istekler").push().key
	firebase.database().ref('istekler/'+istekKodu).set({
    from:kullaniciAdi,
    with:rakipAdi,
    istekkodu:istekKodu,
    tarih:gun+'.'+ay+'.'+yil+'-'+saat+':'+dakika,
  });
document.getElementById('rakipKadi').value= ""
alert("Oyun İsteğiniz Başarıyla Gönderildi!")
back();
}

},300)
 
}else{
alert('Kendi kullanıcı adınıza istek gönderemezsiniz!')
}
}




function allLocalStoragesDelete(){
localStorage.clear()
}


window.onload = function () {
var elmnt=document.getElementById("logo")
elmnt.classList.add("logo-ek")
setTimeout(function(){
$('#logoSayfasi').hide()
$('#loginSayfasi').show()		

sayacOlustur()
var kullaniciAdi = localStorage.getItem('kullaniciAdi')
if(localStorage.getItem("kullaniciAdi") != null){
var kullaniciKodu = localStorage.getItem('userCode')
var querQ = firebase.database().ref("kullanicilar/"+kullaniciKodu); 
querQ.on('value', function (snapshot){
snapshot.forEach(function (childSnapshot){
var data = snapshot.val();
		$('#userCodeSpace').html(kullaniciKodu)
		$('#tPuan').html(data.puantaj)
		$('#tasPuan').html(data.tasPuan)
		$('#toplamPuan').html(data.toplamPuan)
		$('#kSpanAdi').html('@'+data.user)
		var kullaniciAdi = localStorage.getItem('kullaniciAdi')
		return false;
});
});
kayitliUyeGirisi()
}else{
girisControl()
}
},2000)
}

window.onkeydown=function(event){
	if(event.keyCode==13){
		if($('#sheet').html()=="giris sayfasi"){
			login()
		}else if($('#sheet').html()=="kayit sayfasi"){
			girisControl()
		}else if($('#sheet').html()=="istek gonder sayfasi"){
			istekGonder()
		}else if($('#sheet').html()=="sohbet sayfasi"){
			mesajGonder()
		}
	}
}



function girisControl(){
$('#sheet').html('giris sayfasi')
$('#girisDurumSpace').html('')
var kullaniciAdi = $('#kadi').val()
if(document.getElementById('kadi').value!=""){
var kullaniciKodu = localStorage.getItem('userCode')
var querQ = firebase.database().ref("kullanicilar"); 
querQ.on('value', function (snapshot){
snapshot.forEach(function (childSnapshot){
var data = childSnapshot.val();
		if(data.user==kullaniciAdi){
			$('#girisDurumSpace').html('Bu isimde bir kullanıcı zaten var. Lütfen başka bir kullanıcı adı seçin!')
		return false;
		}else{
			if($('#girisDurumSpace').html()==""){
				$('#girisDurumSpace').html('Lütfen bekleyiniz..')
			}
		}
});
});

setTimeout(function(){
if($('#girisDurumSpace').html()=='Bu isimde bir kullanıcı zaten var. Lütfen başka bir kullanıcı adı seçin!'){
		}else{
alert("Kullanıcı Başarıyla Kaydedildi. Gambit'e Hoşgeldiniz!")
yeniUyeGirisi();
}
},3500)
}
}



function kayitliUyeGirisi(){
$('#siralamaSayfasi').hide()
$('#gidenSayfasi').hide()
$('#kullaniciSayfasi').hide()
$('#gelenSayfasi').hide()
$('#yardimSayfasi').hide()
$('#oyunSayfasi').hide()
$("#girisSayfasi").hide()
$('#profilSayfasi').hide()
$('#gidenİstekSayfasi').hide()
$('#loginSayfasi').hide()
$('#registerSayfasi').hide()
$('#messagesSayfasi').hide()
$('#istekİptalSayfasi').hide()
$("#gamesSayfasi").show()	
var kullaniciAdi = localStorage.getItem('kullaniciAdi')
$('#kSpanAdi').html('@'+kullaniciAdi)
gamesYukle()
back()
}


