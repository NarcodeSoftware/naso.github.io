}



function sohbeteGir(fl){
$('#gamesSayfasi').hide()
$('#messagesSayfasi').show()

var oyunMesaji=fl.innerHTML
var mesajBasi = oyunMesaji.indexOf('#@!')
var mesajSonu = oyunMesaji.indexOf('*?')
var sKey = oyunMesaji.slice(mesajBasi+3,mesajSonu)

var gnMesaji=fl.innerHTML
var gnBasi = gnMesaji.indexOf('#€*')
var gnSonu = gnMesaji.indexOf('€@')
var gameNum = gnMesaji.slice(gnBasi+30,gnSonu)

var isimMesaji=fl.innerHTML
var isimBasi = isimMesaji.indexOf('?!')
var isimSonu = isimMesaji.indexOf('#@!')
var sİsim = isimMesaji.slice(isimBasi+2,isimSonu)
$('#messagesOpponentName').html('@'+sİsim)
$('#sohbetKodu').html(sKey)

if(document.getElementsByClassName("fas fa-circle mesajBild")[gameNum].style.color == "red"){

var mjKodu = []
sonMjKodu = []
var queryC = firebase.database().ref("oyunlar/"+sKey+'/mesajlar');
queryC.on('value', function (snapshot){
snapshot.forEach(function (childSnapshot){
var dataC = childSnapshot.val();
mjKodu.push(dataC.mesajKodu)
});
sonMjKodu.push(mjKodu[mjKodu.length-3])
});

var queryD = firebase.database().ref("oyunlar/"+sKey+'/mesajlar/'+sonMjKodu);
queryD.update({
	okundu:"evet"
});

}else{

}



sohbetYukle()
}



var trashList = []
var messageList = []


function mesajSec(bl){
if(bl.style.background!="red"){
document.getElementById("trash").style.color= "red"
bl.style.background= "red"
var mj = bl.innerHTML
var mjBas = mj.indexOf('?!')
var kimden = mj.slice(mjBas,mjBas+3)
var keyBas = mj.indexOf("#-")
var keySon = mj.indexOf("**")
trashKey = mj.slice(keyBas+1,keySon)
trashList.push(trashKey)
}else{
var mj = bl.innerHTML
var mjBas = mj.indexOf('?!')
var kimden = mj.slice(mjBas,mjBas+3)
var keyBas = mj.indexOf("#-")
var keySon = mj.indexOf("**")
trashKey = mj.slice(keyBas+1,keySon)
var jj = trashList.indexOf(trashKey)
trashList.splice(jj,1)
if(kimden=="?!K"){
bl.style.background= "#87CEFA"
}else if(kimden=="?!B"){
bl.style.background= "#E0E0E0"
}
}
if(trashList.length==0){
document.getElementById("trash").style.color= "gray"
}
}



function trashMode(){
if(document.getElementById("trash").style.color=="red"){
var oyunKodu = $('#sohbetKodu').html()
var kullaniciAdi = localStorage.getItem('kullaniciAdi')
var alan = $('#messagesOpponentName').html()
var aliciKisi = alan.slice(1,alan.length)
for(i=0;i<trashList.length;i++){
var j = trashList[i]
firebase.database().ref("oyunlar/"+oyunKodu+"/mesajlar/" + j).remove()
}
document.getElementById("trash").style.color= "gray"
trashList.splice(0,trashList.length)
if($("#messagesSayfasiBody").html()==""){
firebase.database().ref("oyunlar/"+oyunKodu).update({
mesajlar:""
})
firebase.database().ref('oyunlar/' + oyunKodu + '/mesajlar').update({ 
   oyuncu1:kullaniciAdi,
   oyuncu2:aliciKisi
});
alert("Mesaj kutusu boşaltıldı.")
}
}
}


function mesajGonder(){
if($('#mesaj').val()!='' && document.getElementById('trash').style.color=="gray"){
var tarih = new Date()
 var saat = Number(tarih.getHours())
 var dakika = parseInt(tarih.getMinutes())
 		if(dakika<10){
 		var dakika = "0" + dakika
		 }
		 if(saat<10){
 		var saat = "0" + saat
		 }
 var gun = parseInt(tarih.getDate())
 var ay = parseInt(tarih.getMonth())+1
 var yil = parseInt(tarih.getFullYear())
 		if(gun<10){
 		var gun = "0" + gun
		 }
		 if(ay<10){
 		var ay = "0" + ay
		 }
		 
var mesaj = $('#mesaj').val()	 
var kullaniciAdi = localStorage.getItem('kullaniciAdi')
var alan = $('#messagesOpponentName').html()
var aliciKisi = alan.slice(1,alan.length)
var oyunKodu = $('#sohbetKodu').html()

var messageKey = firebase.database().ref('oyunlar/' + oyunKodu + '/mesajlar').push().key;
firebase.database().ref('oyunlar/' + oyunKodu + '/mesajlar/' + messageKey).set({ 
   gonderici: kullaniciAdi,
   alici: aliciKisi,
   tarih: gun+'.'+ay+'.'+yil+'-'+saat+':'+dakika,
   mesaj: mesaj,
   mesajKodu: messageKey,
   okundu: 'hayir'
});

firebase.database().ref('oyunlar/' + oyunKodu + '/mesajlar').update({ 
   oyuncu1:kullaniciAdi,
   oyuncu2:aliciKisi
});

$('#mesaj').val('')
}

}




function sohbetYukle(){
var uyariMesaji = `<h4>Dikkat! Mesajlaşmalarınız oynadığınız oyunlara özeldir. Oyununuzu sildiğinizde veya yeniden oynadığınızda oyuna ait mesajlarınız otomatik olarak silinecektir.</h4>`
$('#messagesSayfasiBody').html("")
document.getElementById("trash").style.color= "gray"
var kullaniciAdi = localStorage.getItem('kullaniciAdi')
var oyunKodu = $('#sohbetKodu').html()
var query = firebase.database().ref("oyunlar/"+oyunKodu+"/mesajlar"); 
 query.on('value', function (snapshot){
 var dataP = snapshot.val()
 var rakip = $('#messagesOpponentName').html().slice(1,$('#messagesOpponentName').html().length)
 if(dataP.oyuncu1 == rakip || dataP.oyuncu2 == rakip){
 $('#messagesSayfasiBody').html('')
 snapshot.forEach(function (childSnapshot){  
 var data = childSnapshot.val();
 
if(data.gonderici==kullaniciAdi){
var ileti = `<div class="container"><div  class="row"><div class="d-flex justify-content-end" > 
 <div class="alert alert-info" style= "margin-top:0px;float:right;border-width:0px 0px 0px 0px;border-radius:20px 20px 2px 20px;background:#87CEFA" role="alert" onclick= "mesajSec(this)"><span style="display:none"></span><span style="">`+data.mesaj+`</span><b><span  style="font-size:13px">  `+data.tarih+`</span></b><span style="display:none">?!K#`+data.mesajKodu+`**</span>
 </div> 
 </div></div></div>`; 
 }else{
 var ileti = `<div  class="container"><div  class="row"><div class="d-flex" > 
 <div class="alert alert-dark" style= "margin-top:0px;float:left;border-color:#eeeeee;border-width:0px 0px 0px 0px;border-radius:2px 20px 20px 20px;background:#e0e0e0" role="alert" onclick= "mesajSec(this)"><span style="display:none"></span><span style="">`+data.mesaj+`</span><b><span style="font-size:13px">  `+data.tarih+`</span></b><span style="display:none">?!B#`+data.mesajKodu+`**</span>
 </div> 
 </div></div></div>`; 
 }
 
 if(data.gonderici!=undefined || data.alici!=undefined){
 $('#messagesSayfasiBody').append(ileti)
 }
 
 $("#messagesSayfasiBody").scrollTop($('#messagesSayfasiBody')[0].scrollHeight - $('#messagesSayfasiBody')[0].clientHeight); 

 });
 }
 });
  
if($('#messagesSayfasiBody').html()==""){
$('#messagesSayfasiBody').append(uyariMesaji)
}
$('#sheet').html('sohbet sayfasi')
}






